{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "@lottiefiles/react-lottie-player": "^3.5.0",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-award",
  "description": "React component for rewarding users",
  "author": "Fede Martin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fedemartinm/react-award.git"
  },
  "bugs": {
    "url": "https://github.com/fedemartinm/react-award/issues"
  },
  "keywords": [
    "react",
    "gamification",
    "awards",
    "lottie"
  ],
  "module": "dist/react-award.esm.js",
  "size-limit": [
    {
      "path": "dist/react-award.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-award.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
